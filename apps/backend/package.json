{
    "name": "@app/backend",
    "version": "0.1.0",
    "type": "module",
    "scripts": {
        "generate:version": "npx tsx ../../scripts/generate-version.ts",
        "setup": "npm run generate:version && npm run setup:db --workspace=app-core && npm run setup:theme --workspace=app-core",
        "build": "npm run setup && astro build",
        "test": "npm run test:unit && npm run test:integration",
        "test:unit": "npx vitest run -c vitest.unit.config.ts",
        "test:integration": "npx vitest run -c vitest.integration.config.ts",
        "dev": "npm run setup && astro dev",
        "preview": "astro preview",
        "db:push": "npm run db:push --workspace=app-core",
        "db:generate": "npm run db:generate --workspace=app-core",
        "db:migrate": "npm run db:migrate --workspace=app-core",
        "db:seed": "npm run db:seed --workspace=app-core",
        "db:validate": "npm run db:validate --workspace=app-core"
    },
    "devDependencies": {
        "@vitest/coverage-v8": "^4.0.18",
        "app-core": "*",
        "vitest": "^4.0.16"
    },
    "dependencies": {
        "@astrojs/node": "^9.5.3",
        "@nexical/agent": "*",
        "astro": "^5.17.1"
    }
}