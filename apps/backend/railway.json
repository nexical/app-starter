{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "npm run build --workspace=@app/backend"
    },
    "deploy": {
        "startCommand": "node apps/backend/dist/server/entry.mjs",
        "healthcheckPath": "/api/status",
        "restartPolicyType": "ON_FAILURE"
    }
}