{
    "name": "@nexical/app-starter",
    "version": "0.1.0",
    "private": true,
    "workspaces": [
        "core",
        "packages/*",
        "apps/*"
    ],
    "scripts": {
        "build": "npm run build --workspaces",
        "dev:ui": "npm run dev --workspace=@app/frontend",
        "dev:api": "npm run dev --workspace=@app/backend",
        "db:up": "docker compose -f compose.db.yml up -d",
        "db:down": "docker compose -f compose.db.yml down",
        "db:destroy": "docker compose -f compose.db.yml down --volumes",
        "app:up": "docker compose up",
        "app:start": "docker compose up -d",
        "app:down": "docker compose down --remove-orphans",
        "app:destroy": "docker compose down --volumes --remove-orphans",
        "test": "npm run test --workspaces"
    },
    "devDependencies": {
        "tsx": "^4.19.0",
        "typescript": "^5.5.0"
    }
}