{
    "name": "@nexical/app-starter",
    "version": "0.1.0",
    "private": true,
    "workspaces": [
        "core",
        "packages/*",
        "apps/**/*"
    ],
    "bin": {
        "nexical": "packages/cli/dist/index.js",
        "prompt": "scripts/prompt.ts"
    },
    "scripts": {
        "build": "npm run db:up && npm run build --workspace=@app/frontend --workspace=@app/backend --workspace=@nexical/agent --workspace=@nexical/cli --workspace=@nexical/generator --workspace=@nexical/reskill --workspace=@nexical/sdk",
        "dev:ui": "npm run dev --workspace=@app/frontend",
        "dev:api": "npm run db:up && npm run dev --workspace=@app/backend",
        "db:up": "docker compose -f compose.db.yml up -d",
        "db:down": "docker compose -f compose.db.yml down",
        "db:destroy": "docker compose -f compose.db.yml down --volumes",
        "app:up": "docker compose up",
        "app:start": "docker compose up -d",
        "app:down": "docker compose down --remove-orphans",
        "app:destroy": "docker compose down --volumes --remove-orphans",
        "test:unit": "npm run test:unit --workspace=app-core --workspace=@app/frontend --workspace=@app/backend --workspace=@nexical/cli --workspace=@nexical/generator --workspace=@nexical/reskill",
        "test:integration": "npm run test:integration --workspace=app-core --workspace=@app/backend --workspace=@nexical/cli --workspace=@nexical/reskill",
        "test:e2e": "npm run test:e2e --workspace=app-core --workspace=@app/frontend --workspace=@nexical/cli",
        "test": "npm run test --workspace=app-core --workspace=@app/frontend --workspace=@app/backend --workspace=@nexical/agent --workspace=@nexical/cli --workspace=@nexical/reskill",
        "prompt": "npx tsx scripts/prompt.ts"
    },
    "devDependencies": {
        "@types/minimist": "^1.2.5",
        "@types/nunjucks": "^3.2.6",
        "minimist": "^1.2.8",
        "nunjucks": "^3.2.4",
        "prisma": "^7.4.0",
        "tsx": "^4.19.0",
        "typescript": "^5.5.0"
    },
    "overrides": {
        "@astrojs/cloudflare": "^12.6.12",
        "wrangler": "^4.65.0",
        "miniflare": "^4.20260212.0",
        "undici": "^7.18.2",
        "lodash": "^4.17.21",
        "nodemailer": "^8.0.1",
        "hono": "^4.11.9"
    },
    "dependencies": {
        "@prisma/client": "^7.4.0"
    }
}